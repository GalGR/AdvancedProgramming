<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.control.BottomNavigationButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="99.0" prefWidth="396.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ap.scrabble.game_client.view.MyView">
	<children>
		<Label alignment="CENTER" prefHeight="29.0" prefWidth="138.0" text="Scrabble Game" />
      <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
            <Button fx:id="hostGame" alignment="BOTTOM_CENTER" mnemonicParsing="false" onAction="#hostGame" prefHeight="25.0" prefWidth="261.0" text="Host a game" />
          <Button fx:id="joinGame" alignment="BOTTOM_CENTER" minWidth="0.0" mnemonicParsing="false" onAction="#joinGame" prefHeight="25.0" text="Join a game" />
        </buttons>
      </ButtonBar>
      <HBox prefHeight="100.0" prefWidth="200.0" visible="false">
         <children>
            <Button mnemonicParsing="false" text="Button" />
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0" visible="false">
         <children>
            <Button mnemonicParsing="false" text="Button" />
            <BottomNavigationButton />
         </children>
      </HBox>
	</children>
	<padding>
		<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
	</padding>
</VBox>
